<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="260dp" />

    <TextView
        android:layout_margin="12dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/tv_ingredients"
        android:layout_margin="12dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/iv_minus"
            android:padding="4dp"
            android:src="@drawable/round_remove_circle_24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="@color/purple_500" />

        <TextView android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:gravity="center"
            android:minWidth="100dp"/>


        <ImageView android:id="@+id/iv_plus"
            android:padding="4dp"
            android:src="@drawable/round_add_circle_24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="@color/purple_500" />


    </LinearLayout>

    <Button android:id="@+id/btn_total"
        android:padding="12dp"
        android:layout_margin="24dp"
        android:text="Total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_500"/>

</LinearLayout>